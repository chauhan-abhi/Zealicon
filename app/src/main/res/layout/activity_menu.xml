<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity">

  <!---  <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/iron"
        android:layout_alignParentTop="true" />  -->

    <Button
        android:id="@+id/fragment_left_menu_login"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/iron"
        android:text="@string/About" />

    <Button
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:text="@string/Events"
        android:id="@+id/button"
        android:onClick="openEvents"
        android:background="@drawable/super1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fragment_left_menu_login"
        android:layout_toEndOf="@+id/fragment_left_menu_login" />

    <Button
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:text="@string/Sponsors"
        android:id="@+id/button2"
        android:layout_below="@+id/fragment_left_menu_login"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:background="@drawable/wolv"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:text="@string/Team"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:background="@drawable/bat"
        android:layout_alignBottom="@+id/button2" />

    <Button
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:text="@string/Reach"
        android:id="@+id/button4"
        android:onClick="openLink"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/spid" />


</RelativeLayout>
